@model MoAn

<h1>Sửa món ăn</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="_id" /> <!-- Thêm trường ẩn cho _id -->

    <div class="form-group">
        <label for="TenMonAn">Tên món ăn:</label>
        <input type="text" class="form-control" id="TenMonAn" name="TenMonAn" asp-for="TenMonAn">
        <span asp-validation-for="TenMonAn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Img">Ảnh:</label>
        <input type="text" class="form-control" id="Img" name="Img" asp-for="Img">
    </div>
    <div class="form-group">
        <label for="GiaTien">Giá tiền:</label>
        <input type="number" class="form-control" id="GiaTien" name="GiaTien" asp-for="GiaTien">
        <span asp-validation-for="GiaTien" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SoLuong">Số lượng:</label>
        <input type="number" class="form-control" id="SoLuong" name="SoLuong" asp-for="SoLuong">
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Size">Size:</label>
        <input type="text" class="form-control" id="Size" name="Size" asp-for="Size">
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
