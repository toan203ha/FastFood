@model WebApplication5.Models.MoAn

<h1>Thông tin chi tiết sản phẩm</h1>

<dl class="row">
    <dt class="col-sm-2">Tên món ăn:</dt>
    <dd class="col-sm-10">@Model.TenMonAn</dd>

    <dt class="col-sm-2">Ảnh:</dt>
    <dd class="col-sm-10">
        <img src="@Model.Img" alt="Hình ảnh món ăn" />
    </dd>

    <dt class="col-sm-2">Giá tiền:</dt>
    <dd class="col-sm-10">@Model.GiaTien</dd>

    <dt class="col-sm-2">Số lượng:</dt>
    <dd class="col-sm-10">@Model.SoLuong</dd>

    <dt class="col-sm-2">Size:</dt>
    <dd class="col-sm-10">@Model.Size</dd>
</dl>
