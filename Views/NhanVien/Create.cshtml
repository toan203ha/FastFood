@model CNPM_NC_DoAnNhanh.Models.NhanVien
@{
    ViewData["Title"] = "Thêm Mới Nhân Viên";
    Layout = "~/Admin/Layout/_LayoutAdmin.cshtml";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .text-danger {
        color: red;
    }

    h2 {
        color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

    .container {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 100%;
        margin: auto;
    }

    input[type="text"] {
        width: 100%;
        padding: 10px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
        border-radius: 4px;
    }

    input[type="submit"] {
        background-color: #28a745;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<h2>Thêm Mới Nhân Viên</h2>
<button>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
</button>

<div class="container mt-4">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="TenNV" class="control-label">Tên Nhân Viên</label>
            <input asp-for="TenNV" class="form-control" />
            <span asp-validation-for="TenNV" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Chức Vụ</label>
            <select asp-for="MaCV" asp-items="@ViewBag.Chucvu" class="form-control">
                <option value="">-- Chọn Chức Vụ --</option>
            </select>
            <span asp-validation-for="MaCV" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TK" class="control-label">Tài Khoản</label>
            <input asp-for="TK" class="form-control" />
            <span asp-validation-for="TK" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PASS" class="control-label">Mật Khẩu</label>
            <input asp-for="PASS" class="form-control" />
            <span asp-validation-for="PASS" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Thêm Mới" class="btn btn-primary" />
        </div>
    </form>
</div>
