
@model IEnumerable<DoUong>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


<p>
    @HttpContextAccessor.HttpContext.Session.GetString("UserID")
    @HttpContextAccessor.HttpContext.Session.GetString("UserName")
</p>


<h1>Danh sách sản phẩm từ MongoDB</h1>
<a href="~/DoUong/Create">
    <button>
        Thêm
    </button>
</a>

<form id="search-form" method="get" asp-action="Search">
    <div class="form-group">
        <label for="keyword">Tìm kiếm theo tên đồ uống:</label>
        <input type="text" class="form-control" id="keyword" name="keyword" placeholder="Nhập từ khóa tìm kiếm">
    </div>
</form>

<h3>Kết Quả Tìm Kiếm</h3>

<ul id="search-results">
    @Html.Partial("Search", new List<DoUong>())
</ul>

<script>
    $(document).ready(function () {
        $("#keyword").on("input", function () {
            // Lấy giá trị từ khóa từ input
            var keyword = $(this).val();

            // Gửi yêu cầu tìm kiếm bằng AJAX
            $.get("/DoUong/Search?keyword=" + keyword, function (data) {
                // Cập nhật danh sách kết quả tìm kiếm
                $("#search").html(data);
            });
        });
    });
</script>




<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên đồ uống</th>
            <th>Ảnh</th>
            <th>Giá tiền</th>
            <th>Số lượng</th>
            <th>Size</th>
            <th>Loại sản phẩm</th>
            <!-- Thêm các tiêu đề cột khác nếu cần -->
        </tr>
    </thead>
    <tbody>
        @foreach (var document in Model)
        {
            <tr>
                @*      <td>@document["TenMonAn"]</td>
            <td>   @document["GiaTien"]</td>
            <td>@document["SoLuong"]</td>*@
                <td>@document._id</td>
                <td>@document.TenDoUong</td>
                <td>@document.Img</td>
                <td>@document.GiaTien</td>
                <td>@document.SoLuong</td>
                <td>@document.Size</td>
                <td>@(document != null ? document.LoaiSanPham: "Không có thông tin")</td>               
                <td>
                    <a asp-action="Edit" asp-route-id="@document._id">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@document._id">Xóa</a>
                    <a asp-action="Details" asp-route-id="@document._id">Chi tiết</a>

                </td>
            </tr>
        }
    </tbody>
</table>
