@model CNPM_NC_DoAnNhanh.Models.DoUong

@{
    ViewData["Title"] = "Create";
    Layout = "~/Admin/Layout/_LayoutAdmin.cshtml";
}
<style>
    body{
        background-image: url('	https://shopeefood.vn/app/assets/img/main-banner.jpg?45bff8c9ec408a5ba51f9fdef662324e');
        color: white;
    }

    .add-pro{
        padding-top:50px;
        padding-bottom:20px;
        font-size:20px;
        text-align:center;
    }

    .form-group{
        padding-bottom:10px;
        font-family:math;
        font-size:25px;
    }

    .btn-primary{
        background-color:orangered;
        color:white;
        font-size:20px;
        border-radius:5px;
        padding:5px;
        padding-left:50px;
        padding-right:50px;
    }
    .title{
        font-family:math;
        font-size:30px;
        text-align:center;
    }
</style>

<body>
    <div class="row">
        <div class="col-md-4">
            <div class="title"> 
                <a>Thêm Sản Phẩm</a>
            </div>
            <form asp-action="Create">
                <div class="add-pro">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <a>Tên Sản Phẩm</a>
                        <input asp-for="TenDoUong" class="form-control" style="margin-left:25px; font-size:20px;" />
                        <span asp-validation-for="TenDoUong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a>Hình Ảnh</a>
                        <input asp-for="Img" class="form-control" style="margin-left:75px; font-size:20px;" />
                        <span asp-validation-for="Img" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a>Giá</a>
                        <input asp-for="GiaTien" class="form-control" style="margin-left:140px; font-size:20px;" />
                        <span asp-validation-for="GiaTien" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a>Số Lượng Tồn</a>
                        <input asp-for="SoLuong" class="form-control" style="margin-left:30px; font-size:20px;" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a>Size</a>
                        <input asp-for="Size" class="form-control" style="margin-left:135px; font-size:20px;" />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a>Loại Sản Phẩm</a>
                        <select asp-for="LoaiSanPham" asp-items="@ViewBag.LoaiSanPhamList" class="form-control" style="margin-left:38px; font-size:18px; padding-left:50px; padding-right:50px;">
                            <option value="">Chọn loại</option>
                        </select>
                        <span asp-validation-for="LoaiSanPham" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-top:20px">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div style="text-align:center;">
        <a asp-action="Index" style="color:white;">Back to List</a>
    </div>
</body>

