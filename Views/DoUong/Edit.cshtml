@model DoUong

<h1>Sửa sản phẩm</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="_id" /> <!-- Thêm trường ẩn cho _id -->

    <div class="form-group">
        <label for="TenDoUong">Tên món ăn:</label>
        <input type="text" class="form-control" id="TenDoUong" name="TenDoUong" asp-for="TenDoUong">
        <span asp-validation-for="TenDoUong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Img">Ảnh:</label>
        <input type="text" class="form-control" id="Img" name="Img" asp-for="Img">
    </div>
    <div class="form-group">
        <label for="GiaTien">Giá tiền:</label>
        <input type="number" class="form-control" id="GiaTien" name="GiaTien" asp-for="GiaTien">
        <span asp-validation-for="GiaTien" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SoLuong">Số lượng:</label>
        <input type="number" class="form-control" id="SoLuong" name="SoLuong" asp-for="SoLuong">
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Size">Size:</label>
        <input type="text" class="form-control" id="Size" name="Size" asp-for="Size">
    </div>
    <div class="form-group">
        <label asp-for="LoaiSanPham" class="control-label"></label>
        <select asp-for="LoaiSanPham" asp-items="@ViewBag.LoaiSanPhamList" class="form-control">
            <option value="">Chọn loại sản phẩm</option>
        </select>
        <span asp-validation-for="LoaiSanPham" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
