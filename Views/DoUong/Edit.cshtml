@model DoUong

@{
    ViewData["Title"] = "Create";
    Layout = "~/Admin/Layout/_LayoutAdmin.cshtml";
}

<style>
    body{
        background-image: url('	https://shopeefood.vn/app/assets/img/main-banner.jpg?45bff8c9ec408a5ba51f9fdef662324e');
        color: white;
        text-align:center;
    }

    .edit-pro {
        padding-top: 50px;
        font-size: 20px;
        text-align: center;
    }

    .form-group {
        padding-bottom: 10px;
        font-family:math;
        font-size:25px;
    }

    .btn-primary {
        background-color: orangered;
        color: white;
        font-size: 20px;
        border-radius: 5px;
        border: none;
        padding: 5px;
        padding-left: 50px;
        padding-right: 50px;
        margin-top:25px;
    }

    .back{
        text-align:center;
        padding-top:40px;
        padding-bottom:15px;
    }

    .title{
        font-family:math;
        font-size:30px;
        text-align:center;
    }
</style>
<body>
    <div class="title">
        <h1>EDIT SẢN PHẨM</h1>
    </div>
    <div class="edit-pro">
        <form asp-action="Edit">
            <input type="hidden" asp-for="_id" />  
            <div class="form-group">
                <label for="TenDoUong">Tên sản phẩm</label>
                <input type="text" class="form-control" id="TenDoUong" name="TenDoUong" asp-for="TenDoUong" style="margin-left:25px; font-size:20px">
                <span asp-validation-for="TenDoUong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Img">Ảnh</label>
                <input type="text" class="form-control" id="Img" name="Img" asp-for="Img" style="margin-left:131px; font-size:20px;">
            </div>
            <div class="form-group">
                <label for="GiaTien">Giá tiền</label>
                <input type="number" class="form-control" id="GiaTien" name="GiaTien" asp-for="GiaTien" style="margin-left:95px; font-size:20px;">
                <span asp-validation-for="GiaTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="SoLuong">Số lượng</label>
                <input type="number" class="form-control" id="SoLuong" name="SoLuong" asp-for="SoLuong" style="margin-left:83px; font-size:20px;">
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Size">Size</label>
                <input type="text" class="form-control" id="Size" name="Size" asp-for="Size" style="margin-left:135px; font-size:20px;">
            </div>
            <div class="form-group">
                <a>Loại Sản Phẩm </a>
                <select asp-for="LoaiSanPham" asp-items="@ViewBag.LoaiSanPhamList" class="form-control" style="margin-left:20px; font-size:20px; padding-left:50px; padding-right:50px;">
                    <option value="">Chọn loại</option>
                </select>
                <span asp-validation-for="LoaiSanPham" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
            <div class="back">
                <a asp-action="Index" style="color:white;">Back to List</a>
            </div>
        </form>
    </div>
</body>
