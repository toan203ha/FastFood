@model KhachHang

<h2>Đăng ký</h2>


<form asp-controller="Login" asp-action="RegisterUser" method="post">
    <div class="form-group">
        <label for="HoTenKH">Họ và Tên:</label>
        <input type="text" class="form-control" id="HoTenKH" name="HoTenKH" asp-for="HoTenKH">
    </div>
    <div class="form-group">
        <label for="TK">Tài Khoản:</label>
        <input type="text" class="form-control" id="TK" name="TK" asp-for="TK">
    </div>
    <div class="form-group">
        <label for="SDT">Số điện thoại:</label>
        <input type="text" class="form-control" id="SDT" name="SDT" asp-for="SDT">
    </div>
    <div class="form-group">
        <label for="PASS">Mật Khẩu:</label>
        <input type="password" class="form-control" id="PASS" name="PASS" asp-for="PASS">
    </div>
    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>
<p>@ViewBag.ErrorRegister</p>

 
