        @foreach (var dt in Model)
        {
            <tr>
                <td>@dt.Ten</td>
                <td>ảnh bìa</td>
                <td>@dt.Soluong</td>
                <td>@String.Format("{0:0,0}", dt.Dongia)</td>
                <td>@String.Format("{0:0,0}", @dt.Soluong * @dt.Dongia) </td>
