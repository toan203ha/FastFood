@using CNPM_NC_DoAnNhanh.Models
@model List<CartItem>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var khach = Context.Session.Get<KhachHang>("TaiKhoan");
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã sách</th>
            <th>Tên sách</th>
            <th>Ảnh bìa</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dt in Model)
        {
            <tr>
                <td>@dt.MaSP</td>
                <td>@dt.</td>
@*                 <td><img src="~/Images/@dt.AnhBia" style="width:100%" /></td>
 *@                <td>@dt.Soluong</td>
                <td>@String.Format("{0:0,0}", dt.Dongia)</td>
                <td>@String.Format("{0:0,0}", dt.Total())</td>
            </tr>
        }
        <tr style="font-weight:bold; text-align:right; color:red;">
            <td colspan="4">Tổng số lượng: @ViewBag.TongSL</td>
            <td colspan="5">Tổng tiền: @ViewBag.TongTien</td>
        </tr>
    </tbody>
</table>
<h2 style="text-align:center">THÔNG TIN KHÁCH HÀNG</h2>
<table class="table table-bordered">
    <tr>
        <td>Họ tên: </td>
        <td>@khach.HoTenKH</td>
    </tr>
    <tr>
        <td>Địa chỉ: </td>
        <td>@khach.DiaChi</td>
    </tr>
  
    <tr>
        <td>Ngày đặt: </td>
        <td>@DateTime.Now.ToShortDateString()</td>
    </tr>
    <tr>
        <td colspan="2" style="text-align: center;">
            @Html.ActionLink("ĐỒNG Ý ĐẶT HÀNG", "DongYDatHang", null, new
            {
            @class = "btn btn - primary"
            })
        </td>
    </tr>
</table>